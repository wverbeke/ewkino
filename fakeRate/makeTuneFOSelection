CC=g++ -Wall -Wextra -O3
CFLAGS= -Wl,--no-as-needed
LDFLAGS=`root-config --glibs --cflags`
SOURCES= tuneFOSelection.cc ../codeLibrary.o src/CutsFitInfo.cc
OBJECTS=$(SOURCES:.cc=.o)
EXECUTABLE=tuneFOSelection

all: 
	$(CC) $(CFLAGS) $(SOURCES) $(LDFLAGS) -o $(EXECUTABLE)
	
clean:
	rm -rf *o $(EXECUTABLE)
