CC=g++ -Wall -Wextra -O3
CFLAGS= -Wl,--no-as-needed,-lTMVA
LDFLAGS=`root-config --glibs --cflags`
SOURCES= runsystematics.cc ../eventselection/src/eventSelections.cc ../eventselection/src/eventFlattening.cc ../../codeLibrary.o 
OBJECTS=$(SOURCES:.cc=.o)
EXECUTABLE=runsystematics

all: 
	$(CC) $(CFLAGS) $(SOURCES) $(LDFLAGS) -o $(EXECUTABLE)

clean:
	rm -rf *o $(EXECUTABLE)
