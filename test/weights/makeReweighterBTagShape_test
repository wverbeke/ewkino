CC=g++ -Wall -Wextra 
CFLAGS= -Wl,--no-as-needed
LDFLAGS=`root-config --glibs --cflags`
SOURCES= ReweighterBTagShape_test.cc ../../codeLibrary.o
OBJECTS=$(SOURCES:.cc=.o)
EXECUTABLE= ReweighterBTagShape_test

all: 
	$(CC) $(CFLAGS) $(SOURCES) $(LDFLAGS) -o $(EXECUTABLE)
	
clean:
	rm -rf *o $(EXECUTABLE)
