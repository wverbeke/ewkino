CC=g++ -Wall -Wextra -O3 -g
CFLAGS= -Wl,--no-as-needed
LDFLAGS=`root-config --glibs --cflags`
SOURCES= eventSelector.cc src/eventSelections.cc ../tools/HWDToolLibrary.cc ../../codeLibrary.o
OBJECTS=$(SOURCES:.cc=.o)
EXECUTABLE=eventSelector

all: 
	$(CC) $(CFLAGS) $(SOURCES) $(LDFLAGS) -o $(EXECUTABLE)
	
clean:
	rm -rf *o $(EXECUTABLE)
