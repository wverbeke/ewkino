CC=g++ -Wall -Wextra -O3 -g
CFLAGS= -Wl,--no-as-needed
LDFLAGS=`root-config --glibs --cflags`
SOURCES= cutFlow.cc ../../tools/HWDToolLibrary.cc ../../../codeLibrary.o
OBJECTS=$(SOURCES:.cc=.o)
EXECUTABLE=cutFlow

all: 
	$(CC) $(CFLAGS) $(SOURCES) $(LDFLAGS) -o $(EXECUTABLE)
	
clean:
	rm -rf *o $(EXECUTABLE)
